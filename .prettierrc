{
    "printWidth": 80,
    "tabWidth": 2,
    "endOfLine": "crlf",
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "jsxSingleQuote": false,
    "quoteProps": "preserve",
    "proseWrap": "preserve",
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "htmlWhitespaceSensitivity": "css",
    "singleAttributePerLine": false,
    "arrowParens": "always",
    "overrides": [
        {
            "files": ["*.prettierrc", "*.prettierrc.json"],
            "options": {
                "parser": "json"
            }
        },
        {
            "files": "*.scss",
            "options": {
                "singleQuote": false
            }
        },
        {
            "files": ["*.html", "*.htm"],
            "options": {
                "tabWidth": 4
            }
        }
    ]
}
